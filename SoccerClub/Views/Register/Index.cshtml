            <form class="login-form" action="Index" method="post">
                <h1 style="text-align:center;">  SIGN UP </h1>

                <input type="text" placeholder="First Name *" name="FirstName" asp-for="FirstName" />
                <span>@Html.ValidationMessageFor(e => e.FirstName)</span>

                <input type="text" placeholder="Last Name *" name="LastName" asp-for="LastName" />
                <span>@Html.ValidationMessageFor(e => e.LastName)</span>

                @Html.PasswordFor(e => e.Password, new { id = "password", @class = "form-control", placeholder = "Password *" })
                <span id="result"></span>
                @Html.ValidationMessageFor(e => e.Password)

                @Html.PasswordFor(e => e.Confirmpwd, new { @class = "form-control", placeholder = "Confirm Password *" })
                @Html.ValidationMessageFor(e => e.Confirmpwd)

               

                <input type="email" placeholder="Email *" name="Email" asp-for="Email" />
                <span>@Html.ValidationMessageFor(e => e.Email)</span>

                @Html.TextBoxFor(e => e.PhoneNumber, new { @class = "form-control", placeholder = "Your Phone *" })
                @Html.ValidationMessageFor(e => e.PhoneNumber)

