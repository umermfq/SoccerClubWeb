            z-index: 9999; /* Ensure it's on top of other elements */
        }

        .spinner {
            width: 50px;
            height: 50px;
            border: 4px solid rgba(255, 255, 255, 0.3); /* Spinner border */
            border-top: 4px solid #3498db; /* Spinner color */
            border-radius: 50%;
            animation: spin 2s linear infinite; /* Animation for spinning */
            margin-bottom: 20px; /* Spacing between spinner and text */
        }

        /* Hide the overlay by default */
        #overlay.hidden {
            display: none;
        }

        /* Styling for the welcome text */
        #welcome-text {
            color: white;
            font-size: 24px;
        }

        keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }


